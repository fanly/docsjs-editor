{
  "name": "@coding01/docsjs-editor",
  "version": "0.1.1",
  "description": "Multi-editor integration bridge for docsjs HTML snapshots and DOCX workflows",
  "license": "MIT",
  "author": "fanly <fanly@outlook.com>",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "build": "tsup",
    "benchmark:switchboard": "npm run build && node scripts/benchmark-switchboard.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "docsjs",
    "editor",
    "tiptap",
    "quill",
    "ckeditor",
    "tinymce",
    "toast-ui",
    "wangEditor"
  ],
  "homepage": "https://docsjs.coding01.cn/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fanly/docsjs-editor.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@coding01/docsjs": "^0.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.18.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.2.4"
  }
}
